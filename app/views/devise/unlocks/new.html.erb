<div class="login">
   <div class="span7">
      <div class="well">
      <div class="page-header">
       <h1>Resend unlock instructions</h1>
      </div>


         <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
           <%= devise_error_messages! %>
             <div class="clearfix">
             <%= f.label :email %>
             <div class="input"><%= f.email_field :email %></div>
             </div>
             <div class="clearfix">
             <div class="input"><%= f.submit "Resend unlock instructions" ,:class=>'btn success large' %></div>
             </div>
         <% end %>
           <div class="clearfix">
           <%= render :partial => "devise/shared/links" %>
           </div>
         </div>
   </div>
</div>


